@model Record

@{
    ViewBag.Title = "Record Details";
}

<h1 class="text-center">Products Details</h1>



@* // Needs this to send the Records id into another controller *@
<input type="hidden" value="@Model.RecordId"/>




<div class="container pt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
    <div class="mx-auto" style="max-width: 18rem;">
        <div class="card">
            <img src="@Model.ImageFileName" class="card-img-top" alt="...">
            <div class="card-body">
                <ul class="list-group list-group-flush text-center">
                    <li class="list-group-item">@Model.RecordName</li>
                    <li class="list-group-item">@Model.ArtistName</li>
                    <li class="list-group-item">@Model.Price?.ToString("C")</li>

                    <li class="list-group-item"><a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.RecordId" class="btn btn-primary ">Add To Cart</a></li>

                </ul>
            </div>
        </div>
    </div>
</div>

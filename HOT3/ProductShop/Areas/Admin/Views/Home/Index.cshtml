
@* ADMIN HOME INDEX *@


@model List<Record>


@{
    ViewBag.Title = "Admin Home";
}

<h1>Welcome to the Admin Home</h1>



@* Checks if there is a string in our Temp Data Message. If So Show the Message If not Nothing. This is so We don't see its padding and color *@
@if (!string.IsNullOrEmpty(TempData["AddOrEditName"] as string))
{
    <div class="text-center bg-info py-3 mt-3">
        <h1 class="">@(TempData["AddOrEditName"])</h1>
    </div>
}



<div class="row">

    <div class="col-md-2">
        <ul class="list-group   text-center">
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-artist="all" class="nav-link">All</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-artist="Andy William" class="nav-link">Andy William</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-artist="Dean Martin" class="nav-link">Dean Martin</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-artist="Frank Sinatra" class="nav-link">Frank Sinatra</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-artist="Paul Anka" class="nav-link">Paul Anka</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-artist="Perry Como" class="nav-link">Perry Como</a>
            </li>


        </ul>
    </div>


    <div class="col-md-10">
        <table class="table table-info table-striped">
            <tr>
                <th>
                    Record Name
                </th>
                <th>
                    Artist
                </th>
                <th>
                    Price
                </th>
                <th></th>
                <th></th>

            </tr>

            @foreach (var record in Model)
            {
                <tr>
                    <td>
                        @record.RecordName
                    </td>
                    <td>
                        @record.ArtistName
                    </td>
                    <td>
                        @record.Price?.ToString("C")
                    </td>

                    <td>
                        <a asp-controller="Record" asp-action="Edit" asp-route-id=@record.RecordId class="btn btn-warning">Edit Record</a>
                    </td>

                    <td>
                        <a asp-controller="Record" asp-action="Delete" asp-route-id=@record.RecordId class="btn btn-danger">Delete Record</a>
                    </td>

                </tr>
            }
        </table>


        <td>
            <a asp-controller="Record" asp-action="Add" class="btn btn-warning">Add Record</a>
        </td>

    </div>
</div>